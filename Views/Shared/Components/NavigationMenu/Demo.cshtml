@model TheDeepO.Models.CategoryClass
@{ 
    <form asp-controller="CategoryController" asp-action="Demo" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <div class="row">
                <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="CategoryId"
                            class="form-control"
                            asp-items="@(new SelectList(@ViewBag.ListofCategory,"CategoryId", "CategoryName"))"></select>
                </div>
            </div>
        </div>
    </form>
}