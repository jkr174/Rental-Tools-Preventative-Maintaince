@model IEnumerable<Inventory>

@{ 
    ViewBag.Title = "All Items";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-left">ID</th>
        <th>Name</th>
        <th class="text-right">Price(Per Day)</th>
        <th class="text-right">OnHand Qty</th>
        <th class="text-right">Out Qty</th>
        <th class="text-right">Total Qty</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.ItemIdentifier</td>
                    <td>@item.ItemName</td>
                    <td class="text-right">@item.Price.ToString("c")</td>
                    <td class="text-right">@item.OnHandQty</td>
                    <td class="text-right">@item.OutQty</td>
                    <td class="text-right">@item.TotalQty</td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                            <a asp-action="Edit" class="btn btn-sm btn-warning"
                               asp-route-itemID="@item.ItemID">
                                Edit
                            </a>
                            <input type="hidden" name="ItemID" value="@item.ItemID" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Item</a>
</div>